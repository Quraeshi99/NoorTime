# .env.example - Use this as a template to create your .env file
# Copy this file to .env and fill in your actual credentials.

# -- Supabase Configuration --
# Used for authentication (JWT validation) and potentially other Supabase services.
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_public_anon_key

# -- PostgreSQL Database Configuration --
# The main database for development and production.
# Example: postgresql://user:password@host:port/dbname
DATABASE_URL=

# The separate database for running automated tests.
# IMPORTANT: Tests will clear this database. DO NOT use the same as DATABASE_URL.
# Example: postgresql://user:password@host:port/test_dbname
TEST_DATABASE_URL=

# -- Application Configuration --
# A strong, random secret key for signing sessions and tokens.
# Generate one with: python -c 'import secrets; print(secrets.token_hex(24))'
SECRET_KEY=

# -- External API Keys --
# For fetching weather data to show alongside prayer times.
OPENWEATHERMAP_API_KEY=

# For error tracking and monitoring in production.
SENTRY_DSN=

# -- Google Cloud Configuration --
# Path to the JSON file containing your Google Cloud service account credentials.
# This is used for services like Google Vision API (for OCR and image analysis).
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/google-cloud-credentials.json
